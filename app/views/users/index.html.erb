<h1 class="center">All Alpha Bloggers</h1>
<div class="row">
	<div class="col-4 offset-5">
		<%= will_paginate %>
	</div>
</div>

<% @users.each do |user| %>
	<div class="row">
		<div class="col-md-4 offset-md-4 my-2">
			<div class="card card-body bg-light">
				<ul class="listing center">
					<li><%= link_to gravatar_for(user), user_path(user) %></li>
					<li class="article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li><small><%= pluralize(user.articles.count, "articles") if user.articles %></small></li>
					<% if current_user.admin? %>
						<li><%= link_to "Delete this user", user_path(user), 
												class: "btn btn-danger btn-sm",
												method: :delete, data: {confirm: "Are you sure you want to delete the user and all his articles?"} %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-4 offset-5">
		<%= will_paginate %>
	</div>
</div>